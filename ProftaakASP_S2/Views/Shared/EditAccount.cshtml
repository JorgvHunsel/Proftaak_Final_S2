@model ProftaakASP_S2.Models.UserViewModel

@{
    ViewData["Title"] = "EditAccount";
}

<h2>Account bewerken</h2>

<hr />
<div class="row login-div care-label">
    <div class="col-md-4">
        <form style="width: 465px" asp-action="EditAccount">
            <input type="hidden" asp-for="UserId" class="form-control" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Voornaam</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Achternaam</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Adres</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">Woonplaats</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label">Postcode</label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label">Emailadres</label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label">Geboortedatum</label>
                <input type="date" asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserGender" class="control-label">Geslacht</label>
                <input asp-for="UserGender" class="form-control" />
                <span asp-validation-for="UserGender" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserAccountType" class="form-control" />
            <input type="hidden" asp-for="Status" />
            <div class="form-group">
                <input class="btn btn-primary btn-lg btn-block" type="submit" value="Opslaan" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

