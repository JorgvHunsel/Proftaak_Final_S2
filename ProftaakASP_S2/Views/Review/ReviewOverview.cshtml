@model IEnumerable<ProftaakASP_S2.Models.ReviewViewModel>

@{
    ViewData["Title"] = "ReviewOverview";
}

<h2>Review Overzicht</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Naam hulpbehoevende
            </th>
            <th>
                Inhoud
            </th>
            <th>
                Aantal sterren
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CareRecipientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Review)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StarAmount)
            </td>
        </tr>
}
    </tbody>
</table>
