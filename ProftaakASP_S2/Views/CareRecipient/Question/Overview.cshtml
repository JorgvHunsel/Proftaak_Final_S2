@model IEnumerable<ProftaakASP_S2.Models.QuestionViewModel>

@{
    ViewData["Title"] = "Overview";
}

<h2>Overzicht hulpvragen</h2>

@foreach (QuestionViewModel question in Model)
{
    <div>
        <div class="question-box">
            <div class="question-content">


                <h3 style="max-width: 400px">@question.Title</h3>
                <h2 class="care-date">@question.Date</h2>
            </div>
            <div class=question-content>
                <h3>@question.Category</h3>
            </div>
            <div class="question-content">
                @if (question.Urgency)
                {
                    <label class="urgence">[Urgent]</label>
                }
            </div>
            <div style="float: right" class="question-content">
                <input class="question-button" type="button" value="Reacties" onclick="location.href = '@Url.Action("ReactionOverview", "CareRecipient", new { id = question.QuestionId })'" />
                <br />
                <input class="question-button" type="button" value="Maak gesloten" onclick="location.href = '@Url.Action("ChangeStatus", "CareRecipient", new { id = question.QuestionId, status = question.Status, path = Context.Request.Path })'" />
                <br />
                <input class="question-button" type="button" value="Bewerken" onclick="location.href = '@Url.Action("Edit", "CareRecipient", new { id = question.QuestionId })'" />
            </div>
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}


