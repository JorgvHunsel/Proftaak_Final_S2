@model ProftaakASP_S2.Models.UserViewModel

@{
    ViewData["Title"] = "CreateAccount";
}

<h2>Account aanmaken</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAccountProfessional" asp-controller="User">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Voornaam</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Achternaam</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Addres</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">Woonplaats</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label">Postcode</label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label">Emailadres</label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label">Geboortedatum</label>
                <input asp-for="BirthDate" placeholder="DD-MM-YYYY" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserGender" class="control-label">Geslacht</label>
                <select asp-for="UserGender" class="form-control">
                    <option value="">--Kies een geslacht--</option>
                    <option value="Man">Man</option>
                    <option value="Vrouw">Vrouw</option>
                    <option value="Anders">Anders</option>
                </select>
                <span asp-validation-for="UserGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccountType" class="control-label">Account type</label>
                <select asp-for="UserAccountType" class="form-control">
                    <option value="Professional">Professional</option>
                </select>
                <span asp-validation-for="UserAccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Wachtwoord</label>
                <input name="password" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Bevestig wachtwoord</label>
                <input name="passwordValidation" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}
