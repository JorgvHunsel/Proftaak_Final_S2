@model IEnumerable<ProftaakASP_S2.Models.UserViewModel>

@{
    ViewData["Title"] = "UserOverview";
}

<h2>Gebruikersoverzicht</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
               Voornaam
            </th>
            <th>
               Achternaam
            </th>
            <th>
                Adres
            </th>
            <th>
                Woonplaats
            </th>
            <th>
                Postcode
            </th>
            <th>
                Emailadres
            </th>
            <th>
               Geboortedatum
            </th>
            <th>
                Geslacht
            </th>
            <th>
                Account type
            </th>
            <th>
                Actief
            </th>
            <th>
                Gekoppelde professional
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (UserViewModel item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserGender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAccountType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Professional.FirstName)

                @Html.DisplayFor(modelItem => item.Professional.LastName)
            </td>
            @if (item.Status)
            {
                <td>
                    @Html.ActionLink("Blokkeren", "BlockUser", new { id = item.UserId })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Deblokkeren", "BlockUser", new { id = item.UserId })
                </td>
            }
            @if (item.UserAccountType == Models.User.AccountType.CareRecipient)
            {
                <td>
                    @Html.ActionLink("Koppel aan professional", "LinkToProfessional", new { userId = item.UserId })
                </td>
            }
            else
            {
                <td></td>
            }
        </tr>
}
    </tbody>
</table>
